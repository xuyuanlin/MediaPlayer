<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notification_item_album"
        android:layout_width="65.0dip"
        android:layout_height="70.0dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/main_img_album" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="120.0dip"
        android:layout_height="70.0dip"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notification_item_name"
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18.0dip" />

        <TextView
            android:id="@+id/notification_item_artist"
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:gravity="top"
            android:singleLine="true"
            android:textSize="13.0dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70.0dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/not_previous"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/img_button_notification_play_prev" />

        <ImageView
            android:id="@+id/not_exit"
            android:layout_width="30.0dip"
            android:layout_height="50.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/not_next"
            android:background="@drawable/img_button_notification_exit" />

        <ImageView
            android:id="@+id/not_next"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_alignTop="@+id/not_play"
            android:layout_toLeftOf="@+id/not_exit"
            android:background="@drawable/img_button_notification_play_next" />

        <ImageView
            android:id="@+id/not_play"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:paddingRight="8.0dip"
            android:layout_alignTop="@+id/not_previous"
            android:layout_toRightOf="@+id/not_previous" />

    </RelativeLayout>

</LinearLayout>